{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "lib": [ "es2015", "es2017", "esnext.array" , "dom"],
        "outDir": "./dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "react",
        "baseUrl": "src",
        "paths": {
            "~/*": ["*"]
        }
    },
    "include": [
        "src/**/*",
        "__tests__/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}